<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.palabs.pricebook">

    <application
        android:allowBackup="true"
        android:icon="@drawable/finalpblogo"
        android:label="Codex"
        android:roundIcon="@drawable/finalpblogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ItemInsertion" />

        <provider
            android:name=".ItemContentProvider"
            android:authorities="com.palabs.pricebook.itemcontentprovider"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".AllItems"
            android:label="@string/title_activity_all_items"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize">



        </activity>
        <activity android:name=".ItemDetails" />
        <activity android:name=".Splash2"></activity>
    </application>

</manifest>